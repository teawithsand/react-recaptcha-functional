{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "target": "ES5",
      "sourceMap": true,
      "jsx": "react",
      "allowJs": true,
      "baseUrl": "./assets",
      "paths": {
        "@app/*": ["*"]
      },
      "resolveJsonModule": true,
      "experimentalDecorators": true,
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
    ],
  }